<h1>New Category</h1>


<p><%= @message%></p>
<% if @explain
	@explain.each do |message| %>
      
        <p><%= message %></p>
              
	<% end %>
<% end %>
<br>
<% @title = "Add a Category" %>

<%= form_tag("/categories", method: "post") do %>
	<p>
	<%= label_tag(:name, "Add a new category:") %><br>
	<%= text_field_tag(:name) %>
	<p>
	<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
	
	<%= submit_tag("Create New Category") %> 
<% end %>

<td><a href= "/products" >Home</a></td>
